  switch (label.toLowerCase()) {
    case 'cdi':
      return 'cdi';
    case 'cdd':
      return 'cdd';
    case 'stage':
      return 'stage';
    case 'freelance':
      return 'freelance';
    case 'apprentissage':
      return 'apprentissage';
    case 'temps partiel':
      return 'temps_partiel';
    case 'temps plein':
      return 'temps_plein';
    default:
      return label; // renvoie tel quel si dÃ©Â©Ã†â€™Â©jÃ©Â©Ã†â€™  un code
  }
}

