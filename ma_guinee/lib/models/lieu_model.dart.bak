class LieuModel {
  final String id;
  final String nom;
  final String type;
  final String imageUrl;
  final double latitude;
  final double longitude;
  final String? description;
  final String? ville;
  final String? ajoutePar;

  LieuModel({
    required this.id,
    required this.nom,
    required this.type,
    required this.imageUrl,
    required this.latitude,
    required this.longitude,
    this.description,
    this.ville,
    this.ajoutePar,
  });

  // Ã©Â©Â¢Ã©â€¦â‚¬Å“â€šÂ¬Â¦ Convertir depuis JSON
  factory LieuModel.fromJson(Map<String, dynamic> json) {
    return LieuModel(
      id: json['id'] ?? '',
      nom: json['nom'] ?? '',
      type: json['type'] ?? '',
      imageUrl: json['imageUrl'] ?? '',
      latitude: (json['latitude'] as num?)?.toDouble() ?? 0.0,
      longitude: (json['longitude'] as num?)?.toDouble() ?? 0.0,
      description: json['description'],
      ville: json['ville'],
      ajoutePar: json['ajoutePar'],
    );
  }

  // Ã©Â©Â¢Ã©â€¦â‚¬Å“â€šÂ¬Â¦ Convertir vers JSON
  Map<String, dynamic> toJson() {
    return {
      'id': id,
      'nom': nom,
      'type': type,
      'imageUrl': imageUrl,
      'latitude': latitude,
      'longitude': longitude,
      'description': description,
      'ville': ville,
      'ajoutePar': ajoutePar,
    };
  }

  // Ã©Â©Â¢Ã©â€¦â‚¬Å“â€šÂ¬Â¦ copyWith pour modifier partiellement
  LieuModel copyWith({
    String? id,
    String? nom,
    String? type,
    String? imageUrl,
    double? latitude,
    double? longitude,
    String? description,
    String? ville,
    String? ajoutePar,
  }) {
    return LieuModel(
      id: id ?? this.id,
      nom: nom ?? this.nom,
      type: type ?? this.type,
      imageUrl: imageUrl ?? this.imageUrl,
      latitude: latitude ?? this.latitude,
      longitude: longitude ?? this.longitude,
      description: description ?? this.description,
      ville: ville ?? this.ville,
      ajoutePar: ajoutePar ?? this.ajoutePar,
    );
  }
}
